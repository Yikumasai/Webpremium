{
  "manifest_version": 3,
  "name": "链接预加载器",
  "version": "2.0.0",
  "description": "智能预加载页面链接，提升浏览体验",
  "permissions": [
    "activeTab",
    "storage",
    "background",
    "tabs",
    "contextMenus"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "链接预加载器",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "commands": {
    "toggle-preload": {
      "suggested_key": {
        "default": "Alt+P",
        "mac": "Alt+P"
      },
      "description": "开关预加载功能"
    },
    "clear-cache": {
      "suggested_key": {
        "default": "Alt+C",
        "mac": "Alt+C"
      },
      "description": "清理预加载缓存"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["preload.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
